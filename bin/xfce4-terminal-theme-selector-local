#!/usr/bin/env python3

"""
Simple curses-based theme selector for xfce4-terminal.

SPDX-FileCopyrightText: Kirill Rekhov <krekhov.dev@gmail.com>
SPDX-License-Identifier: GPL-3.0-or-later

This file allows running the tool locally without installing the package.
"""

import os, sys, inspect

# Add project root to sys.path
current = os.path.dirname(os.path.abspath(inspect.getfile(inspect.currentframe())))
project_root = os.path.dirname(current)
sys.path.insert(0, project_root)

from xfce4_terminal_theme_selector.main import main

if __name__ == "__main__":
    main()
